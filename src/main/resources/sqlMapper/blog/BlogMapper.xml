<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BlogMapper">

	<select id="findAllBlog" resultType="blogvo">
		<![CDATA[
			select no, user_id, thumb_logo, intro
			from blog
		]]>
	</select>

	<select id="findById" parameterType="int" resultType="blogvo">
		<![CDATA[
			select no, user_id, origin_logo, thumb_logo, intro
			from blog
			where user_id = #{user_id }
		]]>
	</select>
	
	<insert id="insert" parameterType="blogvo">
		<![CDATA[
			insert
			into blog
			values(null, #{userId }, #{originLogo }, #{thumbLogo }, #{intro }, now())
		]]>
	</insert>
	
	<update id="update" parameterType="blogvo">
		<![CDATA[
			update blog
			set intro = #{intro }
		 	where no = #{no }
		]]>
	</update>
	
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete
			from blog
			where user_id = #{user_id }
		]]>
	</delete>
	
</mapper>